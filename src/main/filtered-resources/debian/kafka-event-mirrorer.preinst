#!/bin/sh

set -e

KEMUSER="debian-opennms-kem"
KEMHOME="/usr/share/kafka-event-mirrorer"

if ! getent group "$KEMUSER" >/dev/null; then
	addgroup --system "$KEMUSER"
fi

if ! getent passwd "$KEMUSER" >/dev/null; then
	adduser \
		--system \
		--quiet \
		--home "$KEMHOME" \
		--no-create-home \
		--disabled-password \
		--ingroup "$KEMUSER" \
		"$KEMUSER"
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
